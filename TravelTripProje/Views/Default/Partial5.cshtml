@using TravelTripProje.Models.Siniflar
@model List<Blog>
    <div class="box1-left">
        @foreach (var x in Model)
        {
            <div class="bot-img">
                <img src="@x.BlogImage" alt="" style="width:150px; height:76px;"/>
            </div>
            <div class="bot-desc">
                <p>@x.Aciklama.Substring(0, 60) ... </p>
            </div>
            <div class="clear"></div>
        }
    </div>
</div>
